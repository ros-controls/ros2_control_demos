<launch>

  <!--
    Define a variable for the path to the parameter file.
    This is equivalent to the `position_goals` variable in the Python launch file.
    The `$(find-pkg-share ...)` substitution locates the package directory at runtime.
  -->
  <let name="position_goals_file"
       value="$(find-pkg-share ros2_control_demo_example_17)/config/rrbot_forward_position_publisher.yaml"/>

  <!--
    Launch the publisher node.
    This is equivalent to the `Node` action in the Python launch file.
  -->
  <node pkg="ros2_controllers_test_nodes"
        exec="publisher_forward_position_controller"
        name="publisher_forward_position_controller"
        output="both">
    <!--
      Load parameters from the YAML file defined in the 'position_goals_file' variable.
      This is equivalent to `parameters=[position_goals]` in the Python Node action.
    -->
    <param from="$(var position_goals_file)"/>
  </node>

</launch>
